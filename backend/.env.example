# Plaid API Credentials
# Get these from https://dashboard.plaid.com/developers/keys
PLAID_CLIENT_ID=your_client_id_here
PLAID_SECRET=your_secret_here

# Plaid Environment
# Options: sandbox (test data), development (real accounts, free), production (paid)
PLAID_ENV=sandbox

# Database
DATABASE_PATH=networth.db

# API Server
API_HOST=127.0.0.1
API_PORT=8000

# Daily Refresh Time (24-hour format)
DAILY_REFRESH_HOUR=6
DAILY_REFRESH_MINUTE=0
